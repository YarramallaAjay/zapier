{
  "extends": "@repo/typescript-config/base.json",

  "exclude": ["node_modules"],
  "include": [
    "./src/**/*.ts",
    "./integrator/**/*.ts"
  ],
  "compilerOptions": {
    "paths": {
    "@/*": [
      "./src/*"
    ],
    "@integrator/*": [
      "./integrator/*"
    ],
    "@repo/*": [
      "../../packages/*"
    ]
  },
  "baseUrl": ".",
  }

}
